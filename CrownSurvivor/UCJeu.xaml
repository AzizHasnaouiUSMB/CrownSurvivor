<UserControl x:Class="CrownSurvivor.UCJeu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CrownSurvivor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" KeyDown="UCJeu_KeyDown" KeyUp="UCJeu_KeyUp"
             Focusable="True">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/image/background.jpg" Stretch="Uniform"/>
        </Grid.Background>

        <Button x:Name="butRetourJeu" Content="RETOUR" HorizontalAlignment="Left" Margin="700,0,0,0" VerticalAlignment="Top" Height="40" Width="90" Foreground="#FFE6C18A">
            <Button.Background>
                <ImageBrush ImageSource="/image/BoutonFond.png"/>
            </Button.Background>
            <Button.OpacityMask>
                <ImageBrush ImageSource="/image/button.png"/>
            </Button.OpacityMask>
        </Button>
        <Canvas x:Name="ZoneJeu">
            <Image x:Name="imgPerso" Source="/ImPerso/Im1.png" Stretch="Fill" Canvas.Left="382" Canvas.Top="198" Height="54" Width="36" HorizontalAlignment="Center" VerticalAlignment="Top"/>
        </Canvas>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Center">
            <TextBlock Text="HP:" Margin="0,0,5,0" Foreground="White"/>
            <ProgressBar x:Name="HpBar" Width="150" Height="20" Minimum="0" Maximum="100" Value="100"/>
        </StackPanel>
        <TextBlock x:Name="txtWave" Text="Vague 1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0" Foreground="White" FontSize="16" />
    </Grid>
</UserControl>
