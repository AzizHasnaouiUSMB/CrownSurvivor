<UserControl x:Class="CrownSurvivor.UCParametres"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CrownSurvivor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/image/BackgroundRegles.png"/>
        </Grid.Background>

        <Button x:Name="butRetourPara" Content="RETOUR" HorizontalAlignment="Center" Margin="0,357,0,0" VerticalAlignment="Top" Height="40" Width="90" Foreground="#FFE6C18A" Click="butRetourPara_Click">
            <Button.Background>
                <ImageBrush ImageSource="/image/BoutonFond.png"/>
            </Button.Background>
            <Button.OpacityMask>
                <ImageBrush ImageSource="/image/button.png"/>
            </Button.OpacityMask>
        </Button>

        <Button x:Name="butTestSon" Content="TEST" HorizontalAlignment="Center" Margin="500,125,0,0" VerticalAlignment="Top" Height="40" Width="90" Foreground="#FFE6C18A" RenderTransformOrigin="2.281,-4.813" Click="butTestSon_Click">
            <Button.Background>
                <ImageBrush ImageSource="/image/BoutonFond.png"/>
            </Button.Background>
            <Button.OpacityMask>
                <ImageBrush ImageSource="/image/button.png"/>
            </Button.OpacityMask>
        </Button>


        <Button x:Name="butGrandEcran" Content="AGRANDIR LA FENETRE" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" Height="40" Width="180" Foreground="#FFE6C18A"  Click="butGrandEcran_Click">
            <Button.Background>
                <ImageBrush ImageSource="/image/BoutonFond.png"/>
            </Button.Background>
            <Button.OpacityMask>
                <ImageBrush ImageSource="/image/button.png"/>
            </Button.OpacityMask>
        </Button>

        <Button x:Name="butRetrecirEcran" Content="RETRECIR LA FENETRE" HorizontalAlignment="Center" Margin="0,200,0,0" VerticalAlignment="Top" Height="40" Width="180" Foreground="#FFE6C18A"  Click="butRetrecirEcran_Click">
            <Button.Background>
                <ImageBrush ImageSource="/image/BoutonFond.png"/>
            </Button.Background>
            <Button.OpacityMask>
                <ImageBrush ImageSource="/image/button.png"/>
            </Button.OpacityMask>
        </Button>


        <Label Content="Parametres" HorizontalAlignment="Center" Margin="0,53,0,0" VerticalAlignment="Top" FontSize="24" FontWeight="Bold"/>
        <Label Content="Son :" HorizontalAlignment="Left" Margin="167,120,0,0" VerticalAlignment="Top" FontSize="20"/>

        <StackPanel>
            <Slider x:Name="slidSon" Width="350" Height="25" Minimum="1"
             Maximum="100"
             Value="50"
             TickFrequency="1"
             IsSnapToTickEnabled="True"
             HorizontalAlignment="Center" Margin="20,132,0,293"/>
        </StackPanel>


    </Grid>
</UserControl>
