<UserControl x:Class="CrownSurvivor.UCDemarrage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CrownSurvivor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>

        <Grid.Background>
            <ImageBrush ImageSource="/image/camino-bosque-arboles-rocas-ilustracion-dibujos-animados_145644-83237.jpg"/>
        </Grid.Background>

        <Image Margin="174,10,174,205" Source="/image/télécharger (1).png" Stretch="Fill"/>
        <Button x:Name="butJouer" Content="JOUER" HorizontalAlignment="Center" Margin="0,243,0,0" VerticalAlignment="Top" Height="40" Width="90">
            <Button.Background>
                <ImageBrush ImageSource="/image/button.png"/>
            </Button.Background>
            <Button.OpacityMask>
                <ImageBrush ImageSource="/image/button.png"/>
            </Button.OpacityMask>
        </Button>
        <Button x:Name="butPara" Content="PARAMETRES" HorizontalAlignment="Center" Margin="0,294,0,0" VerticalAlignment="Top" Height="40" Width="90" Click="butPara_Click">
            <Button.Background>
                <ImageBrush ImageSource="/image/button.png"/>
            </Button.Background>
            <Button.OpacityMask>
                <ImageBrush ImageSource="/image/button.png"/>
            </Button.OpacityMask>
        </Button>
        <Button x:Name="butQuitter" Content="QUITTER" HorizontalAlignment="Center" Margin="0,341,0,0" VerticalAlignment="Top" Height="40" Width="90">
            <Button.Background>
                <ImageBrush ImageSource="/image/button.png"/>
            </Button.Background>
            <Button.OpacityMask>
                <ImageBrush ImageSource="/image/button.png"/>
            </Button.OpacityMask>
        </Button>
        <Button x:Name="butRegles" Content="REGLES" HorizontalAlignment="Left" Margin="647,341,0,0" VerticalAlignment="Top" Height="40" Width="90">
            <Button.Background>
                <ImageBrush ImageSource="/image/button.png"/>
            </Button.Background>
            <Button.OpacityMask>
                <ImageBrush ImageSource="/image/button.png"/>
            </Button.OpacityMask>
        </Button>
        <StackPanel Margin="10,301,648,10">
            <Button x:Name="butTirage" Content="TIRAGE" HorizontalAlignment="Left" Margin="10,362,0,0" VerticalAlignment="Top" Height="72" Width="114" Click="butTirage_Click">
                <Button.Background>
                    <ImageBrush ImageSource="/image/button.png"/>
                </Button.Background>
                <Button.OpacityMask>
                    <ImageBrush ImageSource="/image/button.png"/>
                </Button.OpacityMask>
            </Button>
            <Image x:Name="ResultImage" Width="64" Height="64" Margin="35,305,701,65"/>
        </StackPanel>
    </Grid>
</UserControl>
